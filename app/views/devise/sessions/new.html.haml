.sign_in
  %h2
    = t("auth.sign_in")

  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "well form-inline") do |f|
    %div
      = f.email_field :email, :placeholder => t(:email)

    %div
      = f.password_field :password, :placeholder => t(:password)

    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label :remember_me, :class => "checkbox inline"

    %div
      = f.submit t("auth.sign_in"), :class => :btn
      = render :partial => "devise/shared/links"
