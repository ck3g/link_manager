= simple_form_for @user, html: { class: "form-horizontal" } do |form|
  = form.input :email
  = form.input :password, hint: t(:change_password_hint)
  = form.input :password_confirmation
  = form.input :role, as: :select, collection: collection_of_roles
  .form-actions
    = form.button :submit, class: "btn btn-primary", dsable_with: t("views.application.wait")

