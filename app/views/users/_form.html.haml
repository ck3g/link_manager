= semantic_form_for @user do |form|
  = form.inputs do
    = form.input :email
    = form.input :password, :hint => t(:change_password_hint)
    = form.input :password_confirmation
    = form.input :role, :as => :select, :collection => collection_of_roles
  = form.buttons :class => "form-actions" do
    = form.commit_button :button_html => { :class => "btn btn-primary", :dsable_with => t("views.application.wait") }

