= simple_form_for link, html: { class: "form-horizontal" } do |f|
  = f.input :url, as: :string
  = f.input :page_rank
  = f.association :placement, as: :select, collection: Placement.all
  = f.input :keyword
  = f.association :status, as: :select, collection: Status.all
  = f.association :our_site, as: :select, collection: OurSite.collection_for(current_user)
  = f.input :inactive, wrapper: :inline_checkbox

  .form-actions
    = f.button :submit, class: 'btn btn-primary', :"data-disable-with" => t("views.application.wait")
