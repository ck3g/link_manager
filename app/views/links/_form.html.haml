= semantic_form_for @link do |f|
  = f.inputs do
    = f.input :url, :as => :string
    = f.input :page_rank
    = f.input :name
    = f.input :placement
    = f.input :keyword
    = f.input :status_id, :as => :select, :collection => Status.all
  = f.buttons do
    = f.commit_button :button_html => { :class => 'button green tall', :disable_with => t("views.application.wait") }
